<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/repository_list_fragment">

    <fragment
        android:id="@+id/repository_list_fragment"
        android:name="com.androidpositive.ghubstore.presentation.repositorylist.RepositoryListFragment"
        android:label="RepositoryListFragment">
        <action
            android:id="@+id/show_repository_detail"
            app:destination="@id/repository_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/repository_detail_fragment"
        android:name="com.androidpositive.ghubstore.presentation.repositorylist.detail.RepositoryDetailFragment"
        android:label="repository_detail"
        tools:layout="@layout/fragment_repository_detail">
        <argument
            android:name="item_id"
            app:argType="long" />
    </fragment>
</navigation>
